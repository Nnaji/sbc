    <section>
<div class="container">
        <div class="row">
            <div class="col-md-8 padding-bottom">
                <h3>Online Kontaktformular</h3>
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label><span class="stern">*</span>Name:</label>
                            <input type="text" class="form-control" id="name" required data-validation-required-message="Name.">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label><span class="stern">*</span>Telefon:</label>
                            <input type="tel" class="form-control" id="phone" required data-validation-required-message="Phone number.">
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label><span class="stern">*</span>Email:</label>
                            <input type="email" class="form-control" id="email" required data-validation-required-message="Email address.">
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Nachricht:</label>
                            <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Nachrichten" maxlength="999" style="resize:none"></textarea>
                        </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary">Senden</button>
                </form>
            </div>
